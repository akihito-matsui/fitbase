<% if @users.any? %>
  <ul class="list-unstyled container">
    <% @users.each do |user| %>
      <li class="media row border-bottom">
        <img class="rounded m-2 p-1 img-fluid col-sm-4" src="<%= user.profile_picture %>" alt="">
        <div class="media-body m-2 p-1 col-sm-8">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= user.message %></p>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @users %>
<% end %>
