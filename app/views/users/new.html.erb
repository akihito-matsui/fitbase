<div class="row justify-content-start">
  <div class="col-sm-10 p-2 m-2">

    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %> 
      <div class="form-group">
        <%= f.label :name, '名前/ニックネーム' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワード確認' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :gender, '性別' %>
        <%= f.text_field :gender, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :age, '年齢' %>
        <%= f.number_field :age, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :resident, '居住地' %>
        <%= f.text_field :resident, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :birthplace, '出身地' %>
        <%= f.text_field :birthplace, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :training_place, 'トレーニング場所' %>
        <%= f.text_field :training_place, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :frequency, 'トレーニング頻度' %>
        <%= f.text_field :frequency, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :objective, 'トレーニングのきっかけ・目的' %>
        <%= f.text_field :objective, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :protein_supplement, '利用しているプロテイン・サプリメント' %>
        <%= f.text_field :protein_supplement, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :music, 'トレーニング中に聞く音楽' %>
        <%= f.text_field :music, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :speakout, 'つらいときの掛け声' %>
        <%= f.text_field :speakout, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :profile_picture, 'プロフィール画像' %>
        <%= f.file_field :profile_picture, multipart: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :message, 'Fitbaseのみんなに一言' %>
        <%= f.text_area :message, class: 'form-control' %>
      </div>

      <div class="row justify-content-center">
        <%= f.submit '登録', class: 'btn btn-primary btn-block col-sm-6' %>
      </div>
    <% end %>
  </div>
</div>
